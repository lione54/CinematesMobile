<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="5dp"
    android:backgroundTint="@color/ColorCineBlack"
    android:orientation="horizontal">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.florent37.diagonallayout.DiagonalLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:diagonal_angle="0"
            app:diagonal_direction="left"
            android:background="@color/ColorCineOrange"
            app:diagonal_position="bottom">

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/poster_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"/>

        </com.github.florent37.diagonallayout.DiagonalLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titolo_poster"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:fontFamily="@font/maven_pro"
        android:gravity="left"
        android:textColor="@color/ColorCineOrange"
        android:textSize="18sp"
        android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/maven_pro"
                android:gravity="left"
                android:textColor="@color/ColorCineOrange"
                android:textSize="14sp"
                android:text="@string/genere2"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/film_detail_genere"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/maven_pro"
                android:gravity="left"
                android:textColor="@color/ColorCineOrange"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/maven_pro"
                android:gravity="left"
                android:textColor="@color/ColorCineOrange"
                android:textSize="14sp"
                android:text="@string/voto_tmdb"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/film_votazione_generale"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/maven_pro"
                android:gravity="left"
                android:textColor="@color/ColorCineOrange"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/maven_pro"
                android:gravity="left"
                android:textColor="@color/ColorCineOrange"
                android:textSize="14sp"
                android:text="@string/voto_cinemates"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/film_votazione_cinemates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/maven_pro"
                android:gravity="left"
                android:textColor="@color/ColorCineOrange"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:fontFamily="@font/maven_pro"
                android:gravity="left"
                android:textColor="@color/ColorCineOrange"
                android:textSize="14sp"
                android:text="@string/_5"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/film_consigliati"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/maven_pro"
            android:gravity="left"
            android:textColor="@color/ColorCineOrange"
            android:textSize="14sp"
            android:text="@string/carlo_mattia_e_altri_23_amici_consigliano_questo_film"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>