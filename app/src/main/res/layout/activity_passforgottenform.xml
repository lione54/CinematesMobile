<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e1111"
    android:orientation="vertical"
    android:forceDarkAllowed="false">

    <!-- AREA LOGO -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="341dp"
            android:layout_height="142dp"
            android:contentDescription="@string/todo1"
            app:srcCompat="@drawable/logo_cinemates" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="@string/creapassword"
            android:fontFamily="@font/maven_pro"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/ColorCineOrange"
            android:textSize="25sp"
            android:textStyle="bold"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confermapasswordNuova_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/inserisci_nuova_password"
            android:layout_marginTop="-20dp"
            android:layout_gravity="center"
            app:counterMaxLength="20"
            app:counterEnabled="true"
            app:counterTextColor="@color/ColorCineWhite"
            android:layout_marginBottom="20dp"
            app:passwordToggleTint="@color/ColorCineWhite"
            android:theme="@style/PasswordIni">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confermapasswordNuova"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/ColorCineWhite"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/riconfermanuovapassword_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/reinserisci_nuova_password"
            android:layout_marginTop="-20dp"
            android:layout_gravity="center"
            app:counterMaxLength="20"
            app:counterEnabled="true"
            app:counterTextColor="@color/ColorCineWhite"
            app:passwordToggleTint="@color/ColorCineWhite"
            android:theme="@style/PasswordIni">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/riconfermanuovapassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/ColorCineWhite"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confermanuovapassdim"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/ColorCineOrange"
            android:text="@string/confermanuovapassword"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            android:textSize="18sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>