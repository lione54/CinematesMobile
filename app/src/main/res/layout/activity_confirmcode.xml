<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e1111"
    android:orientation="vertical"
    android:forceDarkAllowed="false"
    tools:context=".SignIn.ConfirmCodeActivity">

    <!-- INIZIO LOGO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="@string/todo1"
            app:srcCompat="@drawable/logo_cinemates" />

        <!-- FINE LOGO -->

    </LinearLayout>

    <!-- INIZIO AREA DESC. PIN -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/desc_PIN"
            android:layout_width="349dp"
            android:layout_height="44dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/alertPIN"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <!-- FINE AREA DESC. PIN -->
    </LinearLayout>

    <!-- INIZIO INSERT PIN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/inserisciPIN"
            android:inputType="number"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"/>

        <!-- FINE INSERT PIN -->
    </LinearLayout>

    <!-- INIZIO VERIFY PIN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnverifyPIN"
            android:layout_width="200dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#FF8C00"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:text="@string/btnverifyPIN"
            android:textColor="#000000"
            android:textSize="18sp" />
        <!-- FINE VERIFY PIN -->
    </LinearLayout>

    <!-- INIZIO PROGRESS BAR -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ProgressBar
            android:id="@+id/progressBarRegister2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="212dp"
            android:indeterminate="false"
            android:progress="33"
            android:theme="@style/ProgressBarStyle"/>

        <!-- FINE PROGRESS BAR -->
    </LinearLayout>

</LinearLayout>