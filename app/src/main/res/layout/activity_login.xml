<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e1111"
    android:orientation="vertical"
    tools:context=".Log.ui.login.LoginActivity">

    <!-- AREA LOGO -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="341dp"
            android:layout_height="142dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="38dp"
            android:contentDescription="@string/todo1"
            app:srcCompat="@drawable/logo_cinemates" />

    </LinearLayout>

    <!-- AREA LOGIN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/username"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:autofillHints=""
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:drawableEnd="@drawable/ic_baseline_alternate_email_24" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:autofillHints=""
            android:drawableEnd="@drawable/ic_baseline_lock_24"
            android:hint="@string/prompt_password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <!-- FINE AREA LOGIN -->
    </LinearLayout>

    <!-- AREA PASSWORD FORGOTTEN -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:text="@string/descriptionforgottenpassword"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/desclickforgottenpassword"
            android:textColor="#2565AE" />

        <!-- END AREA PASSWORD FORGOTTEN -->
    </LinearLayout>

    <!-- AREA CONFIRM LOGIN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/ColorCineOrange"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:enabled="false"
            android:text="@string/Accedi"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            android:textSize="18sp"/>

        <!-- END AREA CONFIRM LOGIN -->
    </LinearLayout>

    <!-- AREA LOGIN GOOGLE & FACEBOOK -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logingoogle"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#DB4437"
            android:clickable="true"
            android:drawableStart="@drawable/ic_googleminimal"
            android:enabled="false"
            android:focusable="true"
            android:text="@string/AccediGoogle"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            android:textSize="18sp"
            tools:text="Accedi con Google" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginfacebook"
            android:layout_width="332dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#3b5998"
            android:drawableStart="@drawable/ic_facebookminimal2"
            android:enabled="false"
            android:text="@string/AccediFacebook"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            android:textSize="18sp"
            tools:text="Accedi con Facebook" />

        <!-- END AREA LOGIN GOOGLE & FACEBOOK -->
    </LinearLayout>

</LinearLayout>