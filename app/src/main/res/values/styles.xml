<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FF8C00</item>
        <!-- colore linee sotto alle aree di testo -->
        <item name="colorAccent">#fff</item>
        <item name= "android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- Impostazioni del Date Picker -->
    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <!-- Coloro lo sfondo in alto del Date Picker -->
        <item name="colorAccent">#FF8C00</item>
        <!-- Coloro lo sfondo sotto del Date Picker -->
        <item name="android:background">#0e1111</item>
        <!-- Coloro le aree di testo -->
        <item name="android:textColorPrimaryInverse">#FF8C00</item>
        <item name ="android:textColorPrimary">#FF8C00</item>
        <item name="android:textColorSecondaryInverse">#FF8C00</item>
        <item name="android:textColorSecondary">#FF8C00</item>
        <item name="android:textColorTertiary">#FF8C00</item>
        <item name="colorControlActivated">#000</item>
    </style>

    <!-- Progress Bar -->
    <style name="ProgressBarStyle">
        <item name="colorAccent">#FF8C00</item>
    </style>

    <!-- Sezione Gender -->
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint">#FF8C00</item>
        <!-- Coloro i radio buttons sul gender -->
        <item name="android:textColorSecondary">#fff</item>
        <item name="android:textColorTertiary">#FF8C00</item>
        <item name="colorControlActivated">#FF8C00</item>

    </style>

    <!-- Sezione Cerca -->
    <style name="RadioButtonStyleSearch" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint">#000</item>
        <!-- Coloro i radio buttons sul gender -->
        <item name="android:textColorSecondary">#000</item>
        <item name="android:textColorTertiary">#000</item>
        <item name="colorControlActivated">#000</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

    <style name="PasswordPopUpMenu" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/ColorCineOrange</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="hintTextColor">@color/ColorCineOrange</item>
        <item name="errorTextColor">@color/ColorCineRed</item>
        <item name="colorControlNormal">@color/ColorCineOrange</item>
        <item name="colorControlActivated">@color/ColorCineOrange</item>
    </style>

    <style name="PasswordPopUpMenuNuova" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/ColorCineOrange</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="hintTextColor">@color/ColorCineOrange</item>
        <item name="errorTextColor">@color/ColorCineRed</item>
        <item name="colorControlNormal">@color/ColorCineOrange</item>
        <item name="colorControlActivated">@color/ColorCineOrange</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
    </style>

</resources>